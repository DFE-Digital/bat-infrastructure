{
    "cip_tenant": false,
    "container_apps": [
        {
            "image": "mcr.microsoft.com/azuredocs/containerapps-helloworld",
            "name": "simple-hello-world-container",
            "tag": "latest",
            "containerPort": 80,
            "ingress_enabled": true,
            "min_replicas": 0,
            "max_replicas": 2,
            "scale_rules": [],
            "cpu_requests": 0.25,
            "mem_requests": "0.5Gi",
            "secrets": [],
            "env_vars": [],
            "probes": []
        },
        {
            "image": "ghcr.io/dfe-digital/find-teacher-training",
            "name": "find-poc",
            "tag": "8875069b244489ac5766045240f19b816802dab9",
            "containerPort": 3000,
            "ingress_enabled": true,
            "min_replicas": 0,
            "max_replicas": 2,
            "scale_rules": [
                {
                    "name": "requests",
                    "http": {
                        "metadata": {
                            "concurrentRequests": "25"
                        }
                    }
                }
            ],
            "cpu_requests": 0.25,
            "mem_requests": "0.5Gi",
            "secrets": [
                {
                    "name": "secret-key-base",
                    "value": ""
                },
                {
                    "name": "redis-connection-string",
                    "value": ""
                }
            ],
            "env_vars": [
                {
                    "name": "RACK_ENV",
                    "value": "review"
                },
                {
                    "name": "RAILS_ENV",
                    "value": "review"
                },
                {
                    "name": "RAILS_MAX_THREADS",
                    "value": "50"
                },
                {
                    "name": "RAILS_SERVE_STATIC_FILES",
                    "value": "true"
                },
                {
                    "name": "REDIS_CACHE_URL",
                    "secretRef": "redis-connection-string"
                },
                {
                    "name": "REDIS_URL",
                    "secretRef": "redis-connection-string"
                },
                {
                    "name": "RAILS_HOST",
                    "value": "qa.find-postgraduate-teacher-training.service.gov.uk"
                },
                {
                    "name": "WEBPACKER_DEV_SERVER_HOST",
                    "value": "webpacker"
                },
                {
                    "name": "SECRET_KEY_BASE",
                    "secretRef": "secret-key-base"
                }
            ],
            "probes": [
                {
                    "type": "Readiness",
                    "httpGet": {
                        "path": "/ping",
                        "port": 3000,
                        "scheme": "HTTP"
                    },
                    "periodSeconds": 10
                },
                {
                    "type": "Startup",
                    "httpGet": {
                        "path": "/ping",
                        "port": 3000,
                        "scheme": "HTTP"
                    },
                    "periodSeconds": 10
                }
            ]
        }
    ]
}
